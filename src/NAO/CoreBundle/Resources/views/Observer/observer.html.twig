{% extends 'base.html.twig' %}
{% block title %}
    NAO - Observer les oiseaux
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.0.2/dist/leaflet.css" />
{% endblock %}
{% block body %}
    <div class="col-xs-12" >
        <div class="panel panel-primary" >
            <div class="panel-heading" >
                <h1 class="panel-title" >Observer les oiseaux</h1 >
            </div >
            <div class="panel-body" >
                <form class="form-inline" id="form-tri-observation" data-parsley-validate >
                    <div class="form-group" >
                        <input type="text" class="form-control awesomplete liste_espece" autocomplete="off" aria-autocomplete="list" id="form-tri-observation__espece" placeholder="Espèce d'oiseau" data-parsley-species >
                    </div >
                    <button type="submit" class="btn btn-primary" >Filtrer</button >
                </form >
                <div class="checkbox" data-on="{'currentUser': 'naturaliste' }" >
                    <label >
                        <input id="checkbox-observation-a-valider" type="checkbox" > Observation à valider
                    </label >
                </div >
                <div data-on="{'connexionState' : 'online'}" id="mapid" >
                    <button class="bouton-ajouter-observation btn btn-default" >
                        Ajouter une observation
                    </button >
                </div >
                <div class="row" >
                    <button type="button" id="btn-ajouter-observation" class="center-block btn btn-primary btn-lg" >
                        Ajouter une observation
                    </button >
                </div >
                <table class="table table-striped table-collapse-phone" id="tableau-observation" >
                    <thead >
                    <tr >
                        <th >Espèce</th >
                        <th >Coordonnées</th >
                        <th data-sort="int" >Distance (en mètre)</th >
                    </tr >
                    </thead >
                    <tbody id="emplacement__ligne" >

                    </tbody >
                </table >
            </div >
        </div >
    </div >
    <div class="body_social" data-on="{'connexionState' : 'online'}" >
        <div class="body_social__buttons" >
            <a class="body_social__buttons_btn" href="https://www.facebook.com/sharer/sharer.php?u=" ><img src="{{ asset('bundles/naocore/images/facebook.png') }}" alt="Facebook" width="30" /></a >
            <a class="body_social__buttons_btn" href="https://www.linkedin.com/shareArticle?url=" ><img src="{{ asset('bundles/naocore/images/linkedin.png') }}" alt="LinkedIn" width="30" /></a >
            <a class="body_social__buttons_btn" href="https://twitter.com/intent/tweet/?url=" ><img src="{{ asset('bundles/naocore/images/twitter.png') }}" alt="Twitter" width="30" /></a >
            <a class="body_social__buttons_btn" href="https://plus.google.com/share?url=" ><img src="{{ asset('bundles/naocore/images/google_plus.png') }}" alt="Google+" width="30" /></a >
        </div >
        <div class="body_social__clips" >
            <!-- Ici bouton pour masquer/ouvrir panneau latéral -->
            <span class="body_social__clips_chevron" ><</span >
        </div >
    </div >
{% endblock %}
{% block javascripts %}
    {# map #}
    <script src="https://unpkg.com/leaflet@1.0.2/dist/leaflet.js" ></script >
    <script src="{{ asset('bundles/naocore/js/stupidtable.min.js') }}" ></script >
    <script src="{{ asset('bundles/naocore/js/page-observer.js') }}" ></script >
{% endblock %}
