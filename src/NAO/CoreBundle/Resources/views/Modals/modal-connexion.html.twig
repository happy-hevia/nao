<!-- Modal -->
<div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modal-login" >
    <div class="modal-dialog" role="document" >
        <div class="modal-content" >
            <div class="modal-header" >
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
                    <span aria-hidden="true" >&times;</span ></button >
                {# En ligne #}
                <h3 class="modal-title text-center" data-on="{'connexionState' : 'online' }">Connexion</h3 >
                {# Fin En ligne #}
                {# Hors ligne #}
                <h3 class="modal-title text-center" data-on="{'connexionState': 'offline' }">Connexion (hors ligne)</h3 >
                {# Fin Hors ligne #}
            </div >
            <div class="modal-body row" >
                <div class="col-xs-9 col-xs-offset-2 text-center" >
                    <p class="modal-login__introduction" >Connectez-vous pour accéder à votre espace membre et à toutes les fonctionnalités du site.</p >

                    {# En ligne #}
                    <form class="form-horizontal" id="form-login-online" action="http://localhost/nao/web/app_dev.php/utilisateur/connexion" method="post" data-parsley-validate data-on="{'connexionState' : 'online' }">
                        <div class="form-group" >
                            <label for="form-login__email" class="col-sm-4" >Adresse email :</label >
                            <div class="col-sm-8" >
                                <input type="email" class="form-control" id="form-login__email" placeholder="Adresse email" required >
                            </div >
                        </div >
                        <div class="form-group" >
                            <label for="form-login__password" class="col-sm-4" >Mot de passe :</label >
                            <div class="col-sm-8" >
                                <input type="password" class="form-control" id="form-login__password" placeholder="Mot de passe" required >
                            </div >
                        </div >
                        <div id="form-login-online__wrapper-error"></div>
                        <button type="button" class="btn btn-default" data-dismiss="modal" >Annuler</button >
                        <button type="submit" class="btn btn-default" >Se connecter</button >
                    </form >
                    {# Fin En ligne #}
                    {# Hors ligne #}
                    <form class="form-horizontal" id="form-login-offline" data-parsley-validate data-on="{'connexionState': 'offline' }">
                        <div class="form-group" >
                            <label for="form-login__user" class="col-sm-4" >Adresse email :</label >
                            <div class="col-sm-8" >
                                <select id="form-login__user" class="form-control" minlength="2" >
                                </select >
                            </div >
                        </div >

                        <div class="alert alert-warning" ><span class="glyphicon glyphicon-warning-sign
" ></span >Vous devez vous connecter à votre compte en ligne pour avoir accès à tous les droits !
                        </div >

                        <button type="button" class="btn btn-default" data-dismiss="modal" >Annuler</button >
                        <button type="button" id="form-login-offline__submit" class="btn btn-success" >Se connecter</button >
                    </form >
                    {# Fin Hors ligne #}
                </div >
            </div >
        </div >
    </div >
</div >
