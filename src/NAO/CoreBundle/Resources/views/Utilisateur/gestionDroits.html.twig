{% extends 'base.html.twig' %}
{%  block body %}
    <div class="col-xs-12" >
        <div class="panel panel-primary" >
            <div class="panel-heading" >
                <h1 class="panel-title" >Gestion des droits</h1 >
            </div >
            <div class="panel-body" >
                <h2>Rechercher un utilisateur</h2>
                <h2>Liste des utilisateurs</h2>
                <table class="table table-striped">
                    <tr>
                        <th>Compte</th>
                        <th>Email</th>
                        <th>Droit</th>
                        <th>Attribution de r√¥le</th>
                    </tr>
                    {% for user in utilisateurs %}
                    <tr>
                        <td>{{ user.pseudo }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.droit }}</td>
                        <td>
                            <form action="{{ path('utilisateur_change_droit') }}" method="post">
                                <select name="form-droit__select-droit" class="form-droit__select-droit" data-email="{{ user.email }}" data-action="{{ path('utilisateur_change_droit') }}" data-method="post">
                                    <option value="particulier" >particulier</option >
                                    <option value="naturaliste" >naturaliste</option >
                                    <option value="administrateur" >administrateur</option >
                                </select >
                            </form >
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div >
        </div >
    </div >
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/naocore/js/page-gestion.js') }}"></script >
{% endblock %}
